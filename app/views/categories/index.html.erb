<p style="color: green"><%= notice %></p>

<h1>Categories</h1>

<div id="categories">
  <% @categories.each do |category| %>
    <div>
      <%= render category %>
      <p>
        <%= link_to "Show this category", category %>
      </p>
      <% end %>
    </div>
</div>
<div class="new-category-div">
  <%= link_to "New category", new_category_path %>
</div>
