      <ul>
        <% category.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="d-flex justify-content-center mt-5">
    <div class="flex-column">
      <%= form.label :name, class: "form-label" %>
      <%= form.text_field :name, class: "form-control w-100" %>
    </div>
  </div>

  <div  class="d-flex justify-content-center">
    <p>Please, select an icon from the list:</p>
  </div>

  <div class="d-flex flex-row flex-wrap">
    <% icon_list.each do |icon| %>
      <div class="p-1">
        <%= form.radio_button :icon, icon[:icon], class: "form-check-input" %>
        <img class="icon-img" src="<%= asset_path("#{icon[:icon]}.png") %>" alt=<%=icon[:title]%>>
      </div>
    <% end %>
  </div>
  <div class="d-flex justify-content-center mt-5">
    <%= form.submit %>
  </div>
<% end %>